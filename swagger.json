
{
  "openapi": "3.1.0",
  "info": {
    "title": "Techquest",
    "description":"Techquest registration api",
    "version": "1.0.0"
  },
  "servers":[
    {"url": "https://techquest-7yi3.onrender.com"},
    {
      "url":  "http://localhost:8070"
    }
  
  ],
  "paths": {
    "/api/v1/register": {
      "post": {
        "summary": "Make payment from any of these account",
        "tags":["registerRoute"],
        "requestBody": {
          "content": {
           "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name":{
                    "type":"string",
                    "required":true,
                    "example":"ben"
                  },
                  "email":{
                    "type":"string",
                    "required":true,
                    "example":"ben@gmail.com"
                  },
                  "phoneNumber":{
                    "type":"string",
                    "required":true,
                    "example":"0708047194"
                  },
                  "password":{
                    "type":"string",
                    "required":true,
                    "example":"12345678"
                  },
                  "address":{
                    "type":"string",
                    "required":true,
                    "example":"No 12 somolu street lagos"
                  },
                  "state":{
                    "type":"string",
                    "required":true,
                    "example":"lagos"
                  },
                  "country":{
                    "type":"string",
                    "required":true,
                    "example":"nigeria"
                  },
                  "course":{
                    "type":"string",
                    "required":true,
                    "default":"null",
                    "enum":["Backend", "Frontend", "Designer"]
                  },
                  "paid":{
                    "type":"boolean",
                    "required":true,
                    "default":"null",
                    "enum":[true, false]
                  },
                  "paymentType": {
                    "type": "string",
                    "required": true,
                    "default":"null",
                    "enum": [
                      "Naira (Access Bank): 1903725768- Tech Quest",
                      "Dollar (Access Bank): 1907937622- Tech Quest",
                      "Opay: 6113492774 - Tech Quest"
                    ]
                   
                  },
                  "feedBack":{
                    "type":"string",
                    "required":true,
                    "example":"From a friend"
                  },
                  "passportPhoto":{
                    "type":"file",
                    "format":"binary",
                    "required":true
                  },
                  "paymentReceipt":{
                    "type":"file",
                    "format":"binary",
                    "required":true
                  },
                  "sendEmailCopy":{
                    "type":"boolean",
                    "required":false,
                    "enum":[true, false]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "registration completed"
          },
          "400":{
            "description":"Bad request"

          },
          "500":{
            "description":"Server error"
          }
        }
      }
    },

   "/api/v1/users": {
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get all registered users",
          "description": "Retrieve all registered users",
          "responses": {
            "200": {
              "description": "List of regiatered users"
            },
            "404":{
              "description": "Not found"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      }
  }
}
